---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
<style>
  .link-card {
    @apply bg-surface-d dark:bg-surface-l;
    list-style: none;
    display: flex;
    padding: 1px;
    /* background-color: #23262d; */
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 2s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    @apply bg-surface-l dark:bg-surface-d text-primary-l dark:text-primary-d;
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 5px;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    font-size: small;
  }
  .link-card:is(:hover, :focus-within) {
    @apply bg-gradient-to-r from-accent-d dark:from-accent-l via-30% via-accent-l dark:via-accent-d to-[#000000]/60 dark:to-[#ffffff]/60;
    background-position: 0;
    /* background-image: var(--accent-gradient); */
  }
  .link-card:is(:hover, :focus-within) h2 {
    @apply text-accent-d dark:text-accent-l;
    /* color: rgb(var(--accent-light)); */
  }
</style>
